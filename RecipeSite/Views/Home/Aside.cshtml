@model IEnumerable<RecipeSite.Models.ApplicationUser>
@{
    Layout = null;
}           

<aside class="col-lg-3 hidden-xs " >
    <section style="margin:20px;width:100%;height:50%;">
        <header>
            <h3>Popular Users</h3>
        </header>
        <ul>
            @foreach (var item in Model)
            {
                <li>@Html.DisplayFor(modelItem => item.UserName)</li>
            }
        </ul>
    </section>
    <section style="margin-left:20px;width:100%;height:50%;">
        <header>
            <h3>Most Helathy foods</h3>
        </header>
        
        <canvas id="MyCanvas1" onload="init();" style="margin-left:20px;text-align:left">
            This browser or document mode doesn't support canvas object
        </canvas>
       
    </section>
  
</aside>

<script type="text/javascript">
    var can, ctx, step, steps = 0,
          delay = 50;

    function init() {
        can = document.getElementById("MyCanvas1");
        ctx = can.getContext("2d")  ;
        ctx.fillStyle = "black";
        ctx.font = "10pt Verdana";
        ctx.textAlign = "end";
        ctx.textBaseline = "middle";

        step = 0;
        steps = can.height + 10;
        RunTextUpToDown();
    }

    function RunTextUpToDown() {
        step++;
        ctx.clearRect(0, 0, can.width, can.height);
        ctx.save();
        ctx.translate(can.width , step);
        ctx.fillText("Apples -  an excellent source of antioxidants,", 5, 0);
        ctx.fillText("which combat free radicals!", 5, 15);
        ctx.fillText("Almonds -  rich in nutrients, including magnesium", 5, 30);
        ctx.fillText("vitamin E, iron, calcium, fiber, and riboflavin!", 5, 45);
        ctx.fillText("Broccoli -  rich in fiber, calcium and potassium", 5, 60);
        ctx.fillText("Phytonutrients are compounds which reduce the", 5, 75);
        ctx.fillText("risk of developing heart disease", 5, 90);
        ctx.restore();
        if (step == steps)
            step = 0;
        if (step < steps)
            var t = setTimeout('RunTextUpToDown()', delay); //delay = 50
    }
</script>