@{
    Layout = null;
}          

@*Search of recipes*@ 

<div align="left" style="margin-top:20px;margin-right:auto" role="search">
    @using (Html.BeginForm("Search", "Home", FormMethod.Post))
    {
        <p>
            <span iclass="glyphicon glyphicon-search" aria-hidden="true"></span>
            Title: @Html.TextBox("recipeTitle")
            UserName: @Html.TextBox("userName")
            Category: @Html.DropDownList("categories", RecipeSite.Controllers.HomeController.GetDropDown())
            @*<input type="submit" class="glyphicon glyphicon-search" />*@
            <button type="submit" class="btn btn-default" >Go!</button>

        </p>
    }
</div>